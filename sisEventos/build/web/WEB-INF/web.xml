<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>
           classpath:unp/sisEventos/config/spring/spring-db.xml
           classpath:unp/sisEventos/config/spring/Spring-inyecciones.xml
        </param-value>
    </context-param>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>facade</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>servlet_facade_web</servlet-name>
        <servlet-class>unp.sisEventos.web.servlet_facade_web</servlet-class>
        <load-on-startup>3</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>servlet_gestion_usuario</servlet-name>
        <servlet-class>unp.sisEventos.web.servlet_gestion_usuario</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>facade</servlet-name>
        <url-pattern>*.service</url-pattern>
    </servlet-mapping>
    <!-- Sprin tiles -->
    <servlet>
        <servlet-name>eventos</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>eventos</servlet-name>
        <url-pattern>*.aspx</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>servlet_facade_web</servlet-name>
        <url-pattern>/servlet_facade_web</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>servlet_gestion_usuario</servlet-name>
        <url-pattern>/servlet_gestion_usuario</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
